<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoContactoCL">

    <TextView
        android:id="@+id/txt_nuevo_contacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="NUEVO CONTACTO"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edt_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Nombre"
        style="@style/CardView.Dark"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/txt_nuevo_contacto"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/edt_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        style="@style/CardView.Dark"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Numero"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/edt_nombre"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/edt_nombre_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        style="@style/CardView.Dark"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Propietario"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/edt_numero"
        tools:layout_editor_absoluteX="10dp" />

    <Button
        android:id="@+id/btnGuardarContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Guardar"
        style="@style/Widget.MaterialComponents.TextView"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@+id/edt_nombre_property"
        tools:layout_editor_absoluteX="290dp" />


</androidx.constraintlayout.widget.ConstraintLayout>