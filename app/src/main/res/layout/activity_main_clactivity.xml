<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    tools:context=".MainCLActivity">

    <TextView
        android:id="@+id/txv_datos_propietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25dp"
        android:text="@string/string_datos_propietario"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintVertical_bias="0.10"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/edt_nombre_propietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txv_datos_propietario"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="@string/string_nombre_propietario"
        app:layout_constraintVertical_bias="0.15"
        android:inputType="text"
        android:textSize="16dp"/>

    <EditText
        android:id="@+id/edt_numero_propietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt_nombre_propietario"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="@string/string_numero_propietario"
        app:layout_constraintVertical_bias="0.15"
        android:inputType="number"
        android:textSize="16dp"/>
    <Button
        android:id="@+id/bt_registrar_propietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt_numero_propietario"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/string_registrar_propietario"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintVertical_bias="0.25"/>

</androidx.constraintlayout.widget.ConstraintLayout>